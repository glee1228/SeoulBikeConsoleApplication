     MenuView View = new MenuView();
     
     
     
		while (true) {
			userChoice = View.menu();
			switch (userChoice) {
			case 1:
				BikeController.all(); //전체 검색
				break;
			case 2:
				System.out.println("검색하려는 정류소 이름을 입력하세요");
				BikeController.getName(new Scanner(System.in).nextLine()); //이름으로 검색
				break;
			case 3:
				System.out.println("검색하려는 정류소 번호를 입력하세요");
				BikeController.getId(new Scanner(System.in).nextLine()); //번호로 검색
				break;
			case 4:
				BikeController.getHolder(new Scanner(System.in).nextLine()); //거치대 수로 검색
				break;
			case 5:
				BikeController.getLocation(new Scanner(System.in).nextLine()); //위치 좌표 검색
				break;
			case 6:
				BikeController.getRental(new Scanner(System.in).nextLine()); //대여횟수와 반납횟수 검색
				break;
			case 7:
				break;
			case 8:
				BikeController.DeleteOne(new Scanner(System.in).nextLine()); //삭제하기
				break;
			case 9:
				BikeController.UpdateOne("2", new BikeSeoulDTO("1", new Station("서대문구", "추가한데이터", "서울시서대문구", "10"),
						new Location(30.0, 30.0), new Rent(1000, 1000))); //수정하기
				break;
			case 10:
				BikeController.InsertOne(new BikeSeoulDTO("1", new Station("서대문구", "추가한데이터", "서울시서대문구", "10"),
						new Location(30.0, 30.0), new Rent(1000, 1000))); //추가하기
				break;
			case 11:
				System.exit(0);
				break;

			}
